<% @links.order('created_at desc').each do |link| %>
    <h4>
      <%= link_to link.title, link %><br>
      <small>
        <a href="<%= link.url %>">
          <%= link.url %>
          <span class="glyphicon glyphicon-link"></span>
        </a>
      </small><br>
      <small class="author">Submitted by <%= link.user.name %> <%= time_ago_in_words(link.created_at) %> ago</small>
    </h4>
    <div class="btn-group">
      <%= link_to upvote_link_path(link), remote: true, method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-up"></span>
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to downvote_link_path(link), remote: true, method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-down"></span>
        <%= link.get_downvotes.size %>
      <% end %>
      <a class="btn btn-default btn-sm">
        <%= link.comments.count %> Comments
      </a>
    </div>
<% end %>
