<% @links.order('created_at desc').each do |link| %>
    <h4>
      <%= link_to link.title, link %><br>
      <small><a href="<%= link.url %>"><%= link.url %></a></small><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> ago by <%= link.user.name %></small>
    </h4>
    <div class="btn-group">
      <%= link_to upvote_link_path(link), remote: true, method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-up"></span>
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to downvote_link_path(link), remote: true, method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-thumbs-down"></span>
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
<% end %>
